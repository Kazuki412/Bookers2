<div>
  <h1>User info </h1>
  <h3><%= @user.name %></h3>
  <%= @user.introduction %>
  <%= image_tag @user.get_profile_image(100,100) %>
  <% if @user == current_user %>
    <p><%= link_to "編集", edit_user_path(@user.id) %></p>
  <% end %>
</div>

<% #新規投稿 %>
<%= render 'books/list', book: @book %>

<% @books.each do |book| %>
<div>
  <p><%= image_tag book.user.get_profile_image(100,100) %></p>
  <p>Title:<%= link_to book.title, book_path(book.id) %>
  <p>Opinion:<%= book.body %></p>
</div>
<% end %>

