<div class="col-md-3">
  <h1>User info </h1>
  <%= image_tag @user.get_profile_image(100,100) %>
  <table>
    <tboby>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
    </tboby>
  </table>
  <button type="button" class="btn btn-outline-secondary w-100"><%= link_to  edit_user_path(@user.id) do %>
       <i class="fa-solid fa-user-gear" style="color: #89939a;"></i>
       <% end %>
  </button>
  <% #新規投稿 %>
  <%= render 'books/list', book: @book %>
</div>
<div class="offset-md-1 col-md-8">
  <h1>Books</h1>
  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= link_to user_path(@user.id) do %>
            <%= image_tag book.user.get_profile_image(100,100) %></td>
            <% end %>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

