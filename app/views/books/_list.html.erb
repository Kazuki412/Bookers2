<div class="container">
  <h1>New book</h1>
  <%= form_with model: Book.new do |f| %>
  <p class="mb-1">Title</p>
  <p><%= f.text_field :title %></p>
  <p class="mb-1">Opinion</p>
  <p><%= f.text_area :body %></p>
  <button type="submit" class="btn btn-success"><%= f.submit 'Create Book', class: 'text-white'; %></button>
  <% end %>
</div>

