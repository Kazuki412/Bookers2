<% if @book.errors.any? %>
  <% if @book.errors.count == 1 %>
    <%= @book.errors.count %> error prohibited this obj from being saved:
  <% else %>
    <%= @book.errors.count %> errors prohibited this obj from being saved:
  <% end %>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  </ul>
  <% end %>
<% end %>

<% #ログインしているユーザーの情報 %>
<%= render 'users/list2', user: @user %>

<% #新規投稿の共通化%>
<%= render 'list', book: @book %>

<% #投稿されているbookの一覧 %>
<h1>Books</h1>
<% @books.each do |book| %>
  <h4>Title</h4>
  <p><%= image_tag book.user.get_profile_image(100,100) %></p>
  <span><%= link_to book.title, book_path(book.id) %></span>

  <h4>Opinion</h4>
  <span><%= book.body %></span>
<% end %>
