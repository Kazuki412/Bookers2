<% #ユーザーの情報 %>
<div>
  <h1>User info</h1>
  <h3><%= @user.name %></h3>
  <%= @user.introduction %>
  <%= image_tag @user.get_profile_image(100,100) %>
  <% if @user == current_user %>
    <p><%= link_to "編集", edit_user_path(@user.id) %></p>
  <% end %>
</div>

<% #bookの新規投稿 %>
<h1>New book</h1>
