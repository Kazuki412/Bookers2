<div class="col-md-3">
  <% #ログインしているユーザーの情報 %>
  <%= render 'users/list2', user: @user %>

  <% #新規投稿の共通化%>
  <%= render 'list', book: @book %>
</div>

<div class="offset-md-1 col-md-8">
  <% #投稿されているbookの一覧 %>
  <h1>Books</h1>
  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= link_to user_path(book.user.id) do %>
            <%= image_tag book.user.get_profile_image(100,100) %></td>
            <% end %>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>





