<div class=col-md-3>
  <% #このbookを投稿したユーザー %>
  <h1>User info</h1>
  <%= image_tag @user.get_profile_image(100,100) %>
  <table>
    <tbody>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <button type="button" class="btn btn-outline-secondary w-100"><%= link_to edit_user_path(@user.id) do %>
       <i class="fa-solid fa-user-gear" style="color: #89939a;"></i>
     <% end %>
  </button>
  <% #新規投稿 %>
  <%= render 'list', book: @book %>
</div>

<div class="offset-md-1 col-md-8">
  <h1>Book detail</h1>
  <table class="table">
    <tbody>
      <tr>
        <td><%= link_to user_path(@user.id) do %>
            <%= image_tag @user.get_profile_image(100,100) %><br>
            <%= @user.name %></td>
            <% end %>
        <td><%= link_to @book.title, book_path(@book.id) %></td>
        <td><%= @book.body %></td>
        <% if @user == current_user %>
        <td><button class="btn btn-success" type="button"><%= link_to 'Edit', edit_book_path(@book.id), class:'text-white' %></button></td>
        <td><button class="btn btn-danger" type="button"><%= link_to 'Destroy', book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？", class:'text-white' %></button></td>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>

