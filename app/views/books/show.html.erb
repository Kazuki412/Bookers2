<% #フラッシュメッセージ %>
<%= flash[:notice] %>

<% #このbookを投稿したユーザー %>
<h1>User info</h1>
<%= image_tag @user.get_profile_image(100,100) %>
<h3><%= @user.name %></h3>
<%= @user.introduction %>
<%= link_to "編集", edit_user_path(@user.id) %>

<% #新規投稿 %>
<%= render 'list', book: @book %>

<% #bookの詳細 %>
<h1>Book detail</h1>
<%= link_to user_path(@user.id) do %>
  <%= image_tag @user.get_profile_image(100,100) %>
  <%= @user.name %>
<% end %>
<p><%= link_to @book.title, book_path(@book.id) %></p>
<p><%= @book.body %></p>

<% if @user == current_user %>
  <%= link_to 'Edit', edit_book_path(@book.id) %>
  <%= link_to 'Destroy', book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %>
<% end %>
